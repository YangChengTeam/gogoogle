<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8.0dip"
    android:layout_marginRight="8.0dip"
    android:layout_marginBottom="4.0dip">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/card_inner_padding"
        android:paddingTop="@dimen/card_inner_padding"
        android:paddingRight="@dimen/card_inner_padding"
        android:paddingBottom="@dimen/card_inner_padding">

        <TextView
            android:id="@+id/tv_repaired_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/success_repair_default"
            android:textColor="@color/normal_text_color"
            android:textSize="30.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_repaired_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_repaired_title"
            android:layout_marginTop="10.0dip"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/second_text_color"
            android:textSize="14.0sp" />

        <TextView
           android:id="@+id/tv_repaired_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_repaired_info"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20.0dip"
            android:background="?android:selectableItemBackground"
            android:padding="4.0dip"
            android:text="@string/repaired_operate_reboot"
            android:textColor="@color/colorPrimary"
            android:textSize="14.0sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>